<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget"></style>

    <style name="Theme.PageIndicatorBigDiscover" parent="android:Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicatorBigDiscover</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.TabPageIndicatorBigDiscover" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/myradio_vpi_tab_indicator</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicatorMyRadio</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.TabPageIndicatorMyRadio" parent="Widget">
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">@dimen/middle_text_size</item>
        <item name="android:textColor">@color/myradio_view_pager_title_selector</item>
    </style>

    <!-- 广播电台 V4.4.1新添加 -->
    <style name="Theme.TabPageIndicatorBroadcast" parent="android:Theme">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicatorBroadcast</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TabPageIndicatorBroadcast</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 广播电台V4.1.1添加 broadcast_vpi_icon_page_indicator_broadcast-->
    <style name="Widget.IconPageIndicatorBroadcast" parent="Widget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <style name="Theme.TabPageIndicatorBroadcastProgramList" parent="android:Theme">
        <item name="vpiTabPageIndicatorStyle">@style/Widget.BroadcastProgramListTabPageIndicator
        </item>
        <item name="vpiIconPageIndicatorStyle">@style/Widget.IconPageIndicator</item>
        <item name="android:windowBackground">@color/transparent_color</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="Widget.BroadcastProgramListTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/broadcast_audio_list_vpi_tab_indicator</item>
        <item name="android:textAppearance">
            @style/TextAppearance.BroadcastProgramListPageIndicator
        </item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxEms">10</item>
    </style>

    <style name="TextAppearance.BroadcastProgramListPageIndicator" parent="Widget">
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">12dp</item>
        <item name="android:textColor">@color/view_pager_broadcast_program_list_selector</item>
        <item name="android:maxLength">5</item>
    </style>

    <style name="Widget.IconPageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <!-- 广播电台V4.4.1添加 -->
    <style name="Widget.TabPageIndicatorBroadcast" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/radio_button_bg</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TabPageIndicatorBroadcast</item>
        <item name="android:maxLines">1</item>
    </style>

    <!-- 广播电台 V4.1.1 的style-->
    <style name="TextAppearance.TabPageIndicatorBroadcast" parent="Widget">
        <item name="android:layout_margin">12dp</item>
        <item name="android:textSize">@dimen/big_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/view_pager_programme_selector</item>
    </style>

</resources>