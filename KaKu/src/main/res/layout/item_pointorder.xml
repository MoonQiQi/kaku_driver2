<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View style="@style/Line_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pointorder_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="订单号"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:text="支付成功"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/Line_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_pointorder_image"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="15dp"
                android:src="@drawable/ic_launcher" />

            <TextView
                android:id="@+id/tv_pointorder_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/iv_pointorder_image"
                android:layout_toRightOf="@+id/iv_pointorder_image"
                android:maxEms="10"
                android:text="支付成功"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pointorder_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_pointorder_image"
                android:layout_toRightOf="@+id/iv_pointorder_image"
                android:text="支付成功"
                android:textColor="@color/color_red"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/iv_pointorder_image"
                android:layout_marginRight="15dp"
                android:text="x1"
                android:textColor="@color/black"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/Line_h" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_pointorder_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待发货"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:textColor="#F03000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pointorder_com"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/tv_pointorder_state"
                android:text="承运来源"
                android:textColor="@color/color_word"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_pointorder_comid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@+id/tv_pointorder_com"
                android:layout_below="@+id/tv_pointorder_com"
                android:text="运单编号"
                android:paddingBottom="5dp"
                android:textColor="@color/color_word"
                android:textSize="15sp" />

        </RelativeLayout>

        <View style="@style/Line_h" />

    </LinearLayout>

</LinearLayout>