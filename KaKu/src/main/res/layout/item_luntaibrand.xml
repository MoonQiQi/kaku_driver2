<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_luntaibranditem_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_luntaibranditem_duihao"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignBottom="@+id/tv_luntaibranditem_name"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:src="@drawable/duihao"
            android:visibility="invisible" />

        <View
            android:id="@+id/view_luntaibranditem"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/tv_luntaibranditem_name"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_red"
            android:visibility="invisible" />

    </RelativeLayout>

</LinearLayout>